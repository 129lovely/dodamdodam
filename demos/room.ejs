                  </div>
                </li>
              </ul>
            </div>
            <!-- 채팅 입력 창 -->
            <div class="input-area">
              <input
                id="txt-chat"
                type="text"
                placeholder="메세지를 입력해주세요"
              />
              <button type="button" class="js_btn" id="btn-send-chat" disabled>
                전송
              </button>
            </div>
          </div>
        </div>
